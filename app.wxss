/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.box {
  margin: 20rpx;
  padding: 20rpx;
  border: 1px solid silver;
}

.title {
  font-size: 25px;
  font-family: sans-serif;
  font-style: inherit;
  text-align: center;
  margin-bottom: 15px;
  color: black;
}

.Layout {
  font-size: 17px;
  display: flex;
  flex-direction: row;
}

input{
  background: #fff;
  height: 50rpx;
  margin: 1px;
  padding-left: 1px;
  border: solid 1px silver;
}
button {
  margin-top: 20px;
}

.typeface {
  font-size: 16px;
  font-style:inherit;
  color:black;
}